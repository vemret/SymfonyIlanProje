    <div class="row mt">
        <div class="col-lg-12">
            <h4><i class="fa fa-angle-right"></i> Basic Validations</h4>
            <div class="form-panel">
                <form role="form" class="form-horizontal style-form" action="{{ path('user_image_new', {'id' : id}) }}" method="post" enctype="multipart/form-data">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Title</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="image_title" class="form-control" name="image[title]" maxlength="50">
                            <input type="hidden" placeholder="" id="image_prouct" class="form-control" name="image[product]" value="{{ id }}">
                            <p class="help-block">Write Galery Title</p>
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Image Galery</label>
                        <div class="col-lg-10">
                            <input type="file" placeholder="" id="l-name" class="custom-file-input" id="image_image" name="image[image]">
                            <p class="help-block">Chooise File</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-theme" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for image in images %}
                    <tr>
                        <td>{{ image.id }}</td>
                        <td>{{ image.title }}</td>
                        <td><img src="{{ asset('uploads/images/' ~ image.image) }}" height="60"></td>
                        <td>
                            <form method="post" action="{{ path('user_image_delete', {'id': image.id,'pid': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                <button class="btn btn-block btn-danger">Delete</button>
                            </form>

                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <!-- /form-panel -->
        </div>
