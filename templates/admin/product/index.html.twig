{% extends 'adminbase.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL, windowName, windowFeatures) { window.open(windowURL, windowName, windowFeatures ); }
    </SCRIPT>
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Blank Page</h3>
            <div class="row mt">
                <h1>Product index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category</th>
                        <th>Title</th>
                        <th>Keywords</th>

                        <th>Image</th>
                        <th>Type</th>
                        <th>Adres</th>
                        <th>Sponsor</th>
                        <th>City</th>
                        <th>User</th>
                        <th>Gallery</th>
                        <th>Status</th>

                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.catname }}</td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.keywords }}</td>

                            <td><img src=" {{ asset('uploads/images/' ~ product.image) }}" height="40"> </td>
                            <td>{{ product.type }}</td>
                            <td>{{ product.adres }}</td>
                            <td>{{ product.sponsor }}</td>
                            <td>{{ product.city }}/{{ product.country }}</td>
                            <td><a href="{{ path('admin_user_show',{'id': product.userid}) }}">{{ product.name }} {{ product.surname }} </a> </td>
                            <td>
                                <a href="javascript:openWin('{{ path('admin_image_new',{'id': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                    <img src="{{ asset('assets/admin/img') }}/product.jpg" height="40">
                                </a>
                            </td>
                            <td>{{ product.status }}</td>
                            
                            <td>
                                <a href="{{ path('admin_product_show', {'id': product.id}) }}"class="btn btn-block btn-info">Show</a>
                            </td>
                            <td>
                                <a href="{{ path('admin_product_edit', {'id': product.id}) }}"class="btn btn-block btn-info">Edit</a>
                            </td>
                            <td>
                                {{ include('admin/product/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="15">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="col-md-2">
                <a href="{{ path('admin_product_new') }}"class="btn btn-block btn-info">Create New ilan</a>
                </div>
            </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
{% endblock %}
